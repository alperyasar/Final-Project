using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class SystemCall : MonoBehaviour
{
    // Start is called before the first frame update
    public GameObject bus;
    public List<GameObject> lineDistance;
    void Start()
    {
        BusLine bus = new BusLine();
        SystemRun();
    }

    // Update is called once per frame
    void Update()
    {
        
    }
    private void SystemRun()
    {
        GameObject clone = Instantiate(bus, bus.transform.position, bus.transform.rotation);
        int busnumber=0;
        while (true)
        {
            StartCoroutine(Wait(2));
            if (clone.transform.position == lineDistance[busnumber].transform.position)
                busnumber++;
            clone.transform.position = (lineDistance[busnumber + 1].transform.position - lineDistance[busnumber].transform.position) / 5;

        }
    }
    IEnumerator Wait(float duration)
    {
        yield return new WaitForSeconds(duration);   //Wait
    }
}
